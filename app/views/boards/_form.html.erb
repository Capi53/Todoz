<div class="modal-dialog modal-bg bg-active" role="document">
  <div class="modal-content modal">
    <%= form_with(model: @board, local: true) do |form| %>
      <% if @board.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@board.errors.count, "error") %> prohibited this board from being saved:</h2>

          <ul>
          <% @board.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <span class="modal-close" onclick="close_modal()"> X </span>
      <div class="field">
        <h1>New Board</h1>
        <%= form.label :name %>
        <%= form.text_field :name %>
      </div>

      <div class="field">
        <%= form.hidden_field :created_by, :value => current_user.id, readonly:true %>
      </div>

      <div class="actions">
        <%= form.submit %>
      </div>
    <% end %>
  </div>
</div>